<h2>Available drones</h2>

<ul>
    {{#each drones}}
        <li> 

            <h3>{{name}}</h3>

            <p>Number of propellers: {{propellers}}</p>

            <p>Max Speed: {{maxSpeed}}</p>


            <a href="drones/{{id}}/edit">Update</a>

            
            <br/>

            <form action="/drones/{{id}}/delete" method="POST">
                <button type="submit">Delete</button>
            </form>
        
        </li>
    {{/each}}
</ul>
